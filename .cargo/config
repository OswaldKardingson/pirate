# Patches bellman and pairing to use the Pirate Network fork
[patch.crates-io]
bellman = { git = "https://github.com/piratenetwork/librustzcash", branch = "master" }
pairing = { git = "https://github.com/piratenetwork/librustzcash", branch = "master" }

# Configure cross-compilation targets
[target.aarch64-unknown-linux-gnu]
linker = "aarch64-linux-gnu-gcc"
ar = "aarch64-linux-gnu-ar"

# Configure target-specific options for macOS arm64
[target.aarch64-apple-darwin]
rustflags = [
  "-C", "link-arg=-undefined",
  "-C", "link-arg=dynamic_lookup",
]

# Added by Makefile.am for vendored offline build:
[source.crates-io]
replace-with = "vendored-sources"

[source.vendored-sources]
directory = "/home/cryptoforge/Dev/pirate_dev/pirate_master/depends/x86_64-unknown-linux-gnu/share/../vendored-sources"
